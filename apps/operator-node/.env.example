# ==========================================
# EVM CHAIN CONFIGURATION
# ==========================================

# RPC endpoint for the EVM chain
# Polygon Amoy Testnet: https://rpc-amoy.polygon.technology
# Ethereum Sepolia: https://rpc.sepolia.org
EVM_RPC_URL=https://rpc-amoy.polygon.technology

# Deployed AnchoreVault contract address
EVM_VAULT_ADDRESS=0x...

# Deployed OperatorRegistry contract address
EVM_REGISTRY_ADDRESS=0x...

# ==========================================
# CASPER NETWORK CONFIGURATION
# ==========================================

# Casper RPC node URL
# Testnet: https://rpc.testnet.casperlabs.io
# Mainnet: https://rpc.mainnet.casperlabs.io
CASPER_NODE_URL=https://rpc.testnet.casperlabs.io

# Casper chain name
# Testnet: casper-test
# Mainnet: casper
CASPER_CHAIN_NAME=casper-test

# Deployed AnchoreBridge contract hash (without "hash-" prefix or with it)
CASPER_BRIDGE_HASH=hash-...

# Deployed AnchoreAMM contract hash (optional - only needed for cross-chain swaps)
CASPER_AMM_HASH=hash-...

# Default CEP-18 token on Casper (e.g., wrapped USDC)
CASPER_DEFAULT_TOKEN_HASH=hash-...

# ==========================================
# OPERATOR CREDENTIALS
# ==========================================

# Path to your Casper Ed25519 private key file
# Generate with: casper-client keygen ./keys
CASPER_OPERATOR_PRIVATE_KEY_PATH=./keys/secret_key.pem

# ==========================================
# OPTIONAL: ADVANCED SETTINGS
# ==========================================

# Polling interval for EVM events (milliseconds)
# POLLING_INTERVAL=5000

# Enable debug logging
# DEBUG=true

# Gas limit for Casper deploys (in motes)
# CASPER_GAS_LIMIT=5000000000
