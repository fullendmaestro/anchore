# CSPR.cloud Configuration
# Get your access token from https://cspr.cloud
CSPR_CLOUD_ACCESS_TOKEN=your-access-token-here

# CSPR.cloud API Key (for server-side transaction submission)
# Required for /api/casper/submit-transaction endpoint
# Keep this secret - do not expose in browser code
CASPER_CLOUD_API_KEY=your-cspr-cloud-api-key-here

# CSPR.cloud Node URL (for server-side RPC calls)
CASPER_NODE_URL=https://node.testnet.cspr.cloud/rpc

# Path to Casper secret key PEM file (for deployments)
# Default: ../../cspr-contract/keys/secret_key.pem
SECRET_KEY_PATH=

# WalletConnect Project ID (Get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# EVM Configuration (Polygon Amoy Testnet)
NEXT_PUBLIC_EVM_VAULT_ADDRESS=0x...
NEXT_PUBLIC_EVM_REGISTRY_ADDRESS=0x...

